import java.util.*;
public class Vaibhav{
    public static void main(String args[]){

        Scanner sc = new Scanner(System.in);
        int n = 6;

        for(int i=1; i<=n; i++){
           //for Spaces
           for(int j=1; j<= n-i; j++){
               System.out.print(" ");
           }
           //for stars
            for(int k=1; k<= (2*i-1); k++){
                System.out.print("*");
            }
            // Next line
            System.out.println();
        }
    }
}